# Load version control information
autoload -Uz vcs_info
precmd() { vcs_info }

# Format the vcs_info_msg_0_ variable
zstyle ':vcs_info:git:*' formats '[%b] '

# Function to show smiley face based on last exit code
function prompt_status() {
  if [[ $? == 0 ]]; then
    echo "%{$fg_bold[yellow]%}^_^"
  else
    echo "%{$fg_bold[red]%};_;"
  fi
}

# Set PROMPT
PROMPT='$(prompt_status) %{$fg_bold[white]%}(zsh) %{$fg_bold[magenta]%}%D{%H:%M:%S} %{$fg_bold[cyan]%}%n%{$fg_bold[white]%}@%{$fg_bold[green]%}%m%{$fg_bold[white]%}:%{$fg_bold[yellow]%}${PWD/#$HOME/~}
%{$fg_bold[red]%}${vcs_info_msg_0_}%{$fg_bold[white]%}--> %{$reset_color%}'

# Clear RPROMPT
RPROMPT=''
